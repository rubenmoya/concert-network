%header.header.container
  %h1.logo
    =link_to root_path do
      %i.fa.fa-music
      Concert Network

  %nav.nav
    %ul
      %li=link_to "Concerts", root_path, class: "nav-item"
      %li=link_to "Search", root_path, class: "nav-item"

      - if user_signed_in?
        %li=link_to "Profile", edit_user_registration_path, class: "nav-item"
        %li=link_to "Log out", destroy_user_session_path, method: :delete,  class: "nav-item"
        %li=link_to "New concert", new_concert_path, class: "nav-item btn btn--blue"
      - else
        %li=link_to "Sign up", new_user_registration_path, class: "nav-item"
        %li=link_to "Sign in", new_user_session_path, class: "nav-item btn btn--blue"
